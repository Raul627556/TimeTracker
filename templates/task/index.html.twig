<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container mt-5">
    <h1 class="text-center mb-4">Seguimiento de Tareas</h1>

    <div class="row mb-4">
        <div class="col-12 col-md-6 offset-md-3">
            {{ form_start(form, { 'attr': { 'class': 'form-inline justify-content-center', 'id': 'taskForm' } }) }}
            {{ form_row(form.name, { 'attr': { 'class': 'form-control mr-2', 'placeholder': 'Nombre de la tarea' } }) }}
            {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
            {{ form_end(form) }}
        </div>
    </div>

    <div id="task-in-progress-table" class="row">

    </div>


    <div id="summary-of-todays-tasks" class="row">

    </div>



</div>
<!-- Enlazar CSS de Toastr -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">

<!-- Enlazar JavaScript de Toastr -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<script src="{{ asset('build/controllers/TaskController.js') }}"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        let routes = {
            task_start: "{{ path('task_start') }}",
            tasks_in_progress: "{{ path('tasks_in_progress') }}",
            task_stop: "{{ path('task_stop', { 'id': '@' }) }}",
            summary_of_todays_tasks: "{{ path('summary_of_todays_tasks') }}"
        };

        let vars = {};

        TaskController.init(routes, vars);
    });
</script>
</body>
</html>


